@model CarListViewModel

@{
    ViewData["Title"] = "Car List";
}

<h1>
    All Cars:
</h1>

<div class="row">
    <div class="col-md-12">
        <table class="table">
            <thead>
                <tr style="color: black;text-transform:uppercase;">
                    <td>License Plate</td>
                    <td>Owner</td>
                    <td>Colour</td>
                    <td>Brand</td>
                    <td>Model</td>
                    <td>Delete Car</td>
                </tr>
            </thead>
            @foreach (var car in Model.Cars)
            {
                <tr>
                    <td>
                        <a asp-controller="Car" asp-action="Detail" asp-route-id="@car.Id">@car.LicensePlate</a>
                    </td>
                    <td>@car.CarOwner</td>
                    <td>@car.Color</td>
                    <td>@car.CarTypeBrand</td>
                    <td>@car.CarTypeModel</td>
                    <td>
                        <a asp-controller="Car" asp-action="Delete" asp-route-id="@car.Id"
                           onclick="$.post(this.href).success(window.location.href = '/cars');return false; ">
                            Delete
                        </a>
                    </td>
                </tr>
            }
        </table>

        <a asp-controller="Car" asp-action="Detail" asp-route-id="0">Create a Car!</a>

    </div>
</div>
